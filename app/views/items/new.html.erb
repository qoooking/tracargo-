<div class="text-center">
  <h1>Register</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@item) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :cargo_title, '荷物タイトル' %>
        <%= f.text_field :cargo_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cargo_price, '価格' %>
        <%= f.text_field :cargo_price, class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>